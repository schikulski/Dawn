

<footer class="site-footer container">


    {{#is "post"}}

        {{#if @site.logo}}
            <img class="logo-image" src="{{@site.logo}}" alt="{{@site.title}}">
        {{else}}
            <span class="logo-text">{{@site.title}}</span>
        {{/if}}

        <div class="navigation">{{navigation}}</div>

    {{/is}}


</footer>